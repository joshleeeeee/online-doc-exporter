{
  "manifest_version": 3,
  "name": "OnlineDocExporter",
  "version": "1.6.2",
  "description": "Powerful tool to copy/export online documents (Feishu/Lark etc.) as Markdown or Rich Text.",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "storage",
    "unlimitedStorage",
    "debugger",
    "downloads"
  ],
  "host_permissions": [
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.feishu.cn/*",
        "*://*.larksuite.com/*",
        "*://*.zhipin.com/*"
      ],
      "js": [
        "src/content/main.ts"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "OnlineDocExporter"
  }
}
